<h1>Tags</h1>

<ul>
    <% @tags.each do |tag| %>
        <li>
            <%= link_to tag.name, tag_path(tag) %>
            &nbsp
            <%= link_to "Delete", tag_path(tag), method: :delete, data: { confirm: "Are you sure you wish to delete this tag?" } %>
        </li>
    <% end %>
</ul>

